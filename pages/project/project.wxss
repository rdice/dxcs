/* pages/project/project.wxss */
.proList{
 padding: 20rpx;
}
.proItem{
  border-radius: 20rpx;
  color: #4b555d;
  margin-bottom: 30rpx;
}
.proItem image{
  width: 26rpx;
}
.proItem1 text,.proItem3 text{
  padding-left: 10rpx;
}
.proItem1{
  color: #222;
  font-size: 32rpx;
}
.proItem2{
  color: #b2b5c0;
  border-bottom: 1px solid #eee;
  padding: 15rpx 0;
}

.rRound{
  display: inline-block;
  background:#ee3c30;
  border-radius: 50%;
  width: 6px;
  height: 6px;
}


.proItem3{
  color:  #b2b5c0;
  padding: 15rpx 0;
}
.proItem5{
  color: #b2b5c0;
  font-size: 24rpx;
  padding-top: 10rpx;
}
.timebox{
  background:#f7f8fc;
  padding: 4rpx 10rpx;
  border-radius: 20px;
}
.status{
  color: #6a67e4;
  text-align: right;
  font-size: 24rpx;
  position: relative;
  top: -12rpx;
}
.endStatus{
  color: #008000;

}
/* 搜索 */
.search-input {
  position: relative;
  background: #efefef;
  padding: 10rpx 20rpx;
  margin-top: 20rpx;
  z-index: 100;
}

.searchImg {
  width: 38rpx;
  height: 38rpx;
  position: absolute;
  left: 38rpx;
  top: 16rpx;
}

.search-input input {
  border: 1px solid #eee;
  border-radius: 14px;
  padding: 2rpx 20rpx;
  padding-left: 70rpx;
  background: #fff;
}
