/* pages/chatroom/system/main.wxss */

.handle {
  display: flex;
  justify-content: space-between;
}
.card {
  font-size: 28rpx;
  margin: 40rpx;
  padding: 40rpx;
  box-sizing: border-box;
  border: 2rpx solid #abdcff;
  background-color: #f0faff;
  border-radius: 24rpx;
}
.card .time {
  font-weight: 600;
  color: #111;
}
.button {
  color: #fff;
  background-color: #006fff;
  border-radius: 16rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  width: 140rpx;
}
.delete {
  background-color: #fb5250;
}
.choose {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
}
.input {
  text-align: center;
  height: 64rpx;
  background-color: #fff;
  border-radius: 16rpx;
  border: 2rpx solid #e9eaec;
  font-size: 32rpx;
  margin: 20rpx 40rpx;
}