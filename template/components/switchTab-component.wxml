<!--template/components/switchTab-component.wxml-->
<scroll-view scroll-x="true">
  <view class="switchTab">
    <view wx:for="{{list}}" class="flex-none {{list.length>2?'tabItem1':'tabItem2'}}" bindtap="onTap" data-idx="{{index}}">
      <view class="{{index==idx?'activeTab':''}} switem">{{item}}</view>
    </view>
  </view>

</scroll-view>